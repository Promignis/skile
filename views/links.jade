extends layout
block content
	.col-md-10.col-md-offset-1
		.row.list-group-item
			form(method="POST").col-md-6.col-md-offset-3
				.form-group.col-md-9
					input(type='hidden', name='_csrf', value=_csrf)
					input(placeholder="search", type="text", name="linkTitle", class="form-control tt-input link-search", autocomplete="off", spellcheck="false", dir="auto" )
				button(class="btn btn-default btn-danger col-md-3 search-button") Submit
		.row
		if links.length
			- var i = 0;
			each link in links
				.list-group-item.col-md-10.col-md-offset-1(data-id=link.id)
					.row.container-fluid
						if user
							if user.id == link._creator
								a(href="#")
									i.fa.fa-close.fa-lg.pull-right
								a(href="#")
									i.fa.fa-edit.fa-lg.pull-right
						a(href=link.url, class='title', target="_blank")
							=link.title
						p
							=link.description
					.row.container-fluid
						a.pull-right(href="/profile/"+link._creatorUrl)
							=link._creatorName
						select.rating(data-id=link.id, data-vote="#{link.canVote}", data-rating_id=i,data-count=link.ratingCount, data-rating=link.ratingSum)
							option(value="1" class="rating-bar") 1
							option(value="2") 2
							option(value="3") 3
							option(value="4") 4
							option(value="5") 5
							option(value="6") 6
							option(value="7") 7
							option(value="8") 8
							option(value="9") 9
							option(value="10") 10
				- i+=1;

			if (pages > 1 && page < pages + 1)
				.col-md-4.col-md-offset-1
					ul.pagination
						if(page > 1)
							li
								a(href="/links?page=#{page-1}") Prev
						li.active
							a(href="/links?page="+page)
								=page
						if(page < pages)
							li
								a(href="/links?page=#{page+1}") Next
		else
			h1 No links found!
			if page > pages + 1
				ul.pagination
					li
						a(href="/links?page=#{pages}") Last
